<form action="/comments/create" id="comment-box" method="POST">
  <textarea
    name="content"
    cols="30"
    rows="1"
    placeholder="Start commenting here..."
    required
  ></textarea>
  <input type="hidden" name="post_id" value="<%= i._id %>" />
  <input type="submit" value="Comment" />
</form>
