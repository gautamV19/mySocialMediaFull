<ul id="post-comment-<%= i.id %>">
  <% for (let j=i.comments.length - 1;j >0 ; j--) { %>
  <br />
  <% let comment = i.comments[j] %>
  <li>
    <!-- deleting a comment  -->
    <% if(locals.user && locals.user.id == comment.user.id) { %>
    <small>
      <a href="/comments/delete/<%= comment.id %>">delete</a>
    </small>
    <% } %>

    <!-- showing a comment  -->
    <p><%= comment.content %></p>
    <small> <%= comment.user.name %> </small>
  </li>

  <%} %>
</ul>
